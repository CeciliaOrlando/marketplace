<h1>Academias</h1>

<%= link_to 'Nueva Academia', new_academy_path %>

<ul>
  <% @academies.each do |academy| %>
    <li>
      <%= link_to academy.name, academy_path(academy) %>
      <%= link_to 'Editar', edit_academy_path(academy) %>
      <%= link_to 'Eliminar', academy_path(academy), method: :delete, data: { confirm: '¿Estás seguro?' } %>
    </li>
  <% end %>
</ul>
