<%# banner %>
  <div class= "row">
    <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://molchanovs.com/cdn/shop/articles/Molchanovs_Freediving_-_What_is_Freediving_by_Alexey_Molchanov.jpg?v=1603086438&width=1080);">
      <div class="container">
        <h1><%= @academy.name%> </h1>
      </div>
    </div>



<div class="container mt-5">
  <div class="row p-5">
    <% @academy.courses.each do |course| %>
      <div class="col-3">
        <%= link_to course_path(course) do %>
          <div class="card_transition shadow border mb-5 p-3" style="background-image: url('<%= url_for(course.photos.first) %>'); background-size: cover;">
            <div class="content d-flex align-items-center p-3 flex-column">
              <h1><%= course.name %></h1>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<%= link_to 'Atrás', academies_path, class: "btn btn-gradient mb-5"%>

<% if current_user == @academy.user  %>
  <%= link_to 'Nuevo Curso', new_academy_course_path(@academy), class: "btn btn-gradient mb-5"%>
  <%= link_to 'Editar', edit_academy_path(@academy), class: "btn btn-gradient mb-5"%>
  <%= link_to 'Eliminar', academy_path(@academy), method: :delete, data: { confirm: '¿Estás seguro?' }, class: "btn btn-gradient mb-5"%>
<% end %>


<%# footer %>
<br><br>
  <div class="footer">
    <div class="footer-links">
      <a href="#"><i class="fab fa-github"></i></a>
      <a href="#"><i class="fab fa-instagram"></i></a>
      <a href="#"><i class="fab fa-facebook"></i></a>
      <a href="#"><i class="fab fa-twitter"></i></a>
      <a href="#"><i class="fab fa-linkedin"></i></a>
    </div>
    <div class="footer-copyright">
      <i class="fas fa-heart"></i> diving
    </div>
  </div>
</div>
